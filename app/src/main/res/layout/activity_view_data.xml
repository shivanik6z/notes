<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view_data"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/back_design"

    >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="6dp"
            android:layout_marginTop="20dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/update"
            android:background="@drawable/update_bk"
            android:textColor="@android:color/black"

            android:hint="enter name to update"


            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text =" update the note"
            android:padding="6dp"
            android:layout_margin="10dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:id="@+id/go_to_update"
            android:background="@drawable/login_bk"
            />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:nestedScrollingEnabled="true"
            >

            <ListView

                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_marginTop="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/ed_design"
                android:nestedScrollingEnabled="true"
                android:id="@+id/list_of_item"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text =" back to quick notes "
                android:padding="6dp"
                android:layout_margin="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                android:id="@+id/back_to_home_2"
                android:background="@drawable/login_bk"
                />
        </LinearLayout>

    </ScrollView>
</LinearLayout>